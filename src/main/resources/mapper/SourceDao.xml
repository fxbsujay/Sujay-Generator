<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.susu.generator.dao.SourceDao">

	<resultMap id="resultMap" type="com.susu.generator.entity.SourceEntity">
		<result column="conn_name" property="connName" />
		<result column="conn_url" property="connUrl" />
		<result column="db_type" property="dbType" />
		<result column="create_date" property="createDate" />
		<result column="update_date" property="updateDate" />
	</resultMap>

	<insert id="insert" parameterType="com.susu.generator.entity.SourceEntity" useGeneratedKeys="true" keyProperty="id">
		INSERT  INTO `source` (
		<if test="connName != null and connName !=''">
			conn_name,
		</if>
		<if test="connUrl != null and connUrl !=''">
			conn_url,
		</if>
		<if test="dbType != null">
			db_type,
		</if>
		<if test="username != null and username !=''">
			username,
		</if>
		<if test="password != null and password !=''">
			password,
		</if>
			status)
		VALUES (
		<if test="connName != null and connName !=''">
			#{connName},
		</if>
		<if test="connUrl != null and connUrl !=''">
			#{connUrl},
		</if>
		<if test="dbType != null">
			#{dbType},
		</if>
		<if test="username != null and username !=''">
			#{username},
		</if>
		<if test="password != null and password !=''">
			#{password},
		</if>
			#{status})
	</insert>

	<update id="updateById" parameterType="com.susu.generator.entity.SourceEntity">
		update `source` set
		<if test="connName != null and connName !=''">
			conn_name =#{connName},
		</if>
		<if test="connUrl != null and connUrl != ''">
			conn_url =#{connUrl},
		</if>
		<if test="dbType != null">
			db_type =#{dbType},
		</if>
		<if test="username != null and username != ''">
			username =#{username},
		</if>
		<if test="password != null and password != ''">
			password =#{password},
		</if>
		<if test="status != null">
			status =#{status},
		</if>
		    id =#{id}
		where id =#{id}
	</update>

	<delete id="deleteById">
		delete from `source` where id = #{id}
	</delete>

	<select id="queryList" resultMap="resultMap">
		SELECT * FROM `source`
		ORDER BY update_date DESC
	</select>

	<select id="selectById" resultMap="resultMap" >
		select * from `source` where id = #{id}
	</select>


</mapper>